# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)

GET         /dishes                 controllers.Application.allDishes
POST        /dishes                 controllers.Application.addDish
POST        /dishes/:id             controllers.Application.deleteDish(id: Long)
POST        /dishes/like/:id        controllers.Application.addLike(id: Long)
POST        /dishes/evaluate/:id    controllers.Application.evaluateDish(id: Long)

